{
  "openapi": "3.0.3",

  "info": {
    "title": "Attica Digital Twins API",
    "description": "This API is the backend for the Attica Digital Twins project. It provides data to the frontend applications as well as to any interested third party.",
    "version": "1.0.0",
    "contact": {
      "name": "Attica Digital Twins",
      "url": "https://atticadt.uwmh.eu",
      "email": "dt@atticadt.uwmh.eu"
    },
    "license": {
      "name": "AGPL",
      "url": "https://www.gnu.org/licenses/agpl-3.0.en.html"
    }
  },

  "tags": [
    {
      "name": "Athens Plant Nursery",
      "description": "Provides access to real-time data from the Athens Plant Nursery PLC and water quality data from the analyses of ΕΥΔΑΠ."
    }
  ],

  "paths": {
    "/flask/apnplc/{limit}": {
      "get": {
        "tags": ["Athens Plant Nursery"],
        "summary": "Get metrics the last {limit} PLC metrics",
        "parameters": [
          {
            "name": "limit",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APNPLC"
                }
              }
            }
          }
        }
      }
    },

    "/flask/attica_green/data": {
      "get": {
        "summary": "Get data",
        "description": "This endpoint returns an Excel file with irrigation, irrigation data, and clima data.",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            },
            "headers": {
              "Content-disposition": {
                "description": "The filename of the returned Excel file.",
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "APNPLC": {
        "type": "object",
        "properties": {
          "Timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "col3": {
            "type": "number",
            "format": "float"
          },
          "col4": {
            "type": "number",
            "format": "float"
          },
          "col5": {
            "type": "number",
            "format": "float"
          },
          "col6": {
            "type": "number",
            "format": "float"
          },
          "col7": {
            "type": "number",
            "format": "float"
          },
          "col8": {
            "type": "number",
            "format": "float"
          },
          "col9": {
            "type": "number",
            "format": "float"
          },
          "col10": {
            "type": "number",
            "format": "float"
          },
          "col11": {
            "type": "number",
            "format": "float"
          },
          "col12": {
            "type": "number",
            "format": "float"
          },
          "col13": {
            "type": "number",
            "format": "float"
          },
          "col14": {
            "type": "number",
            "format": "float"
          }
        }
      }
    }
  }
}
